{
  "manifest_version": 3,
  "name": "Gmail Phone Capture \u2014 Google Sign-In (Sheets) PRO",
  "version": "2.1.0",
  "description": "Gmail \u2192 extraction num\u00e9ros \u2192 Google Sign-In (OAuth) \u2192 Google Sheets (d\u00e9dup raw\u2192phones). Filtres + presets + UX.",
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GPC \u2014 Sign in"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}